<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_getstarted"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="24dp"
    android:scrollbars="vertical">

    <TextView
        android:id="@+id/qrisTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Scan QRIS"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:backgroundTint="@android:color/white"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:cardUseCompatPadding="true">

        <ImageView
            android:id="@+id/qrisImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:padding="16dp"
            android:contentDescription="QRIS Image"
            android:background="@android:color/white"/>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/uploadProofButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/brownPrimary"
        android:fontFamily="@font/poppins_semibold"
        android:text="Upload Bukti Pembayaran"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/uploadMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/poppins"
        android:text="Upload bukti pembayaran terlebih dahulu"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="14sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/donePaymentButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/rounded_button_disabled"
        android:backgroundTint="@color/gray"
        android:enabled="false"
        android:fontFamily="@font/poppins_semibold"
        android:text="Pembayaran Selesai"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

</LinearLayout>